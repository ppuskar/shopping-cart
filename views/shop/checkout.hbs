<div class="row justify-content-around">


  
    <div class="col-md-4 p-4">
                <h4 class="text-left text-muted">Payment Details</h4>
        <div class="card">
            <div class="row p-4">
                <div class="checkout-inlineimage">
                    <img class="img-responsive checkout-images"
                        src="https://cdn0.iconfinder.com/data/icons/credit-card-debit-card-payment-PNG/128/Mastercard-Curved.png">
                    <img class="img-responsive checkout-images"
                        src="https://cdn0.iconfinder.com/data/icons/credit-card-debit-card-payment-PNG/128/Discover-Curved.png">
                    <img class="img-responsive checkout-images"
                        src="https://cdn0.iconfinder.com/data/icons/credit-card-debit-card-payment-PNG/128/Paypal-Curved.png">
                    <img class="img-responsive checkout-images"
                        src="https://cdn0.iconfinder.com/data/icons/credit-card-debit-card-payment-PNG/128/American-Express-Curved.png">
                </div>
            </div>

            <div class="container">

                <form role="form" method="POST" class="/checkout">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group"> <label>CARD OWNER</label> <input validated type="text"
                                    class="form-control" placeholder="Card Owner Name" /> </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">

                                <label for="address">ADDRESS</label>
                                <input type="text" class="form-control" id="address" placeholder="1234 Main St"
                                    required="">
                                <div class="invalid-feedback"> Please enter your shipping address. </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group"> <label>CARD NUMBER</label>
                                <div class="input-group"> <input type="tel" validated class="form-control"
                                        placeholder="Valid Card Number" /> <span class="input-group-addon"><span
                                            class="fa fa-credit-card"></span></span> </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-7 col-md-7">
                            <div class="form-group"> <label><span class="hidden-md">EXPIRATION</span></label> <input
                                    validated type="tel" class="form-control" placeholder="MM / YY" /> </div>
                        </div>
                        <div class="col-md-5 col-md-5 pull-right">
                            <div class="form-group"> <label>CV CODE</label> <input validated type="tel"
                                    class="form-control" placeholder="CVC" /> </div>
                        </div>
                    </div>

                </form>
                


                <div class="row p-2">
                    <div class=" col-md-12">



                        <div class="col-md-12"> <button class="btn btn-success btn-lg btn-block">Confirm
                                Payment</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

      <div class="col-md-4  mb-4 p-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-secondary badge-pill">{{totalQuantity}}</span>
        </h4>
        <ul class="list-group mb-3 sticky-top">
            {{#each products}}
            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <h6 class="my-0">{{this.item.title}}</h6>
                    <small class="text-muted">Brief description</small>
                </div>

                <span class="text-muted">${{this.price}}</span>
            </li>
            {{/each}}

        </ul>
        <div class="row p-2">
            <div class="col-md-6 pull-left"><strong>TOTAL</strong></div>
            <div class="col-md-6 pull-left">
                <p class="text-right">$ {{totalPrice}}</p>
            </div>
        </div>
        <form class="card p-2">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Promo code">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-secondary">Redeem</button>
                </div>
            </div>
        </form>

    </div>
</div>